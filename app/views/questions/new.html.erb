<%= render "shared/header" %>

<%= form_with url: user_questions_path(@user.id), local: true do |f| %>
  <%= render 'shared/error_messages', model: @question %>
  <h3>問題</h3>
    <%= f.text_area :problem_statement, placeholder:"問題文" %>
  <h3>答え</h3>
    <%= f.text_area :correct_answer, placeholder:"答え"%>
  <div>
    <%= f.submit "問題作成" %>
  </div>
<% end %>

<div>
  <%=  link_to "戻る", user_path(@user.id) %>
</div>