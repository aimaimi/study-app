<%= render "shared/header" %>
<div class="question-background">
  <div class="contents-row">
    <div class="container">
      <%= form_with url: user_questions_path(@user.id), local: true do |f| %>
        <h2 class="new-question">問題作成</h2>
        <%= render 'shared/error_messages', model: @question %>
        <h3 class="field">問題</h3>
          <%= f.text_area :problem_statement, placeholder:"問題文", class:"question-field" %>
        <h3 class="field">答え</h3>
          <%= f.text_area :correct_answer, placeholder:"答え", class:"question-field"%>
        <div class="new-question-bottun">
          <%= f.submit "問題作成", class:"create-question-bottun"%>
        </div>
        <div class="new-question-bottun">
          <%=  link_to "戻る", user_path(@user.id) %>
        </div>
      <% end %>
    </div>
  </div>
</div>