<%= render "shared/header" %>

<h2>ユーザーリスト</h2>
<%= form_with url: search_users_path, local: true, method: :get do |form| %>
  <%= form.text_field :keyword, placeholder: "ユーザーを検索する" %>
  <%= form.submit "検索" %>
<% end %>
<% @users.each do |user| %>
  <div>
    <%= link_to "#{user.nickname}", user_path(user.id) %>
  </div>
<% end %>