<%= render "shared/signup_header" %>
<div class="login-background">
  <div class="contents-row">
    <div class="container">
      <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <div class="login">
          ログイン
        </div>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
        <div class="list-field">
          <%= f.label :メールアドレス %><br />
        </div>
        <div>
          <%= f.email_field :email, autofocus: true, id:"email-form",class:"small-field"%>
        </div>

        <div class="list-field">
          <%= f.label :パスワード %><br />
        </div>
        <div>
          <%= f.password_field :password, autocomplete: "off", id:"password-form",class:"small-field"%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="list-field">
            <%= f.label :ログインしたままにする %><br />
          </div>
          <div>
            <%= f.check_box :remember_me %>
          </div>
        <% end -%>
        <div class="login-field">
          <%= f.submit "ログイン", class:"login-bottun" %>
        </div>
      <% end %>
    </div>
  </div>
</div>